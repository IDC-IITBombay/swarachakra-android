                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@id/tryit"
                    android:layout_alignRight="@+id/tryit"
                    android:layout_height="1dp"
                    android:layout_below="@id/tryit"
                    android:layout_marginTop="25dp"
                    android:background="@color/divider_color"/>

                <TextView
                    android:id="@+id/remotemode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/remote_mode_label"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/remotemodeIcon"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remotemode"
                    android:layout_alignLeft="@id/tryit"
                    android:layout_marginRight="20dp"
                      android:src="@drawable/remoteicon2"

                     />
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_below="@+id/remotemodeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tryit"
                    android:layout_alignRight="@+id/tryit"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginTop="5dp"
