                    android:background="@color/divider_color" />
                <TextView
                    android:id="@+id/likeus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider3"
                    android:layout_marginTop="5dp"
